#include <iostream>

int main() {
  int year;

std::cout<<"Please enter the year and i'll tell you if it's a leap year.";

  std::cin>>year;
  
  if(year%400==0){
    std::cout<<"This is a leap year. ";
  }
  else if (year %100==0){
    std::cout<<"This is not a leap year. ";
  }
  else if (year % 4 ==0){
    std::cout<<"This is a leap year. ";
  }

}
